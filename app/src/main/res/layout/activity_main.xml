<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_mouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mouse R$: 9,99"
        android:textSize="30dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_mais_mouse"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_menos_mouse"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_menos_mouse"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_quantidade_mouse"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_quantidade_mouse"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_margin="8dp"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="70dp" />

    <TextView
        android:id="@+id/tv_teclado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Teclado R$: 39,50"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/btn_mais_teclado"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/btn_menos_teclado"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/btn_menos_teclado"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/tv_quantidade_teclado"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:layout_constraintTop_toBottomOf="@+id/guideline" />

    <TextView
        android:id="@+id/tv_quantidade_teclado"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/fechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fechar"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:textSize="30dp"
        android:id="@+id/tv_fechado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/fechar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="500dp" />

</androidx.constraintlayout.widget.ConstraintLayout>